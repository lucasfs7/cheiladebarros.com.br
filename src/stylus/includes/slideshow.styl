slides = 10
time-per-slide = 10
total-animation-time = time-per-slide * slides

.slideshow
  width 100%
  height 100vh
  overflow hidden
  position relative

  .photo
    background-image linear-gradient(200deg, #ffffff, #666666)
    background-size 400% 400%
    width 100%
    height 100vh
    display block
    margin 0
    position absolute
    top 0
    left 0
    animation loading 20s ease infinite

    &.loaded
      background-position center
      background-size cover
      animation round (total-animation-time)s infinite
      opacity 0

      for i in 1..slides
        &:nth-child({i})
          animation-delay (total-animation-time - time-per-slide * i)s

@keyframes round
  15%
    opacity 1
  20%
    opacity 0

@keyframes loading
  0%
    background-position 0% 50%
  50%
    background-position 100% 50%
  100%
    background-position 0% 50%
