#work
  background #DDDDDD
  width 100%
  min-height 100vh
  display flex
  align-items center
  justify-content center

  .jobs
    max-width 900px
    margin 20px 10px
    width 100%
    display flex
    align-items center
    justify-content center
    flex-wrap wrap

    .job
      background #FFFFFF
      width 250px
      height 320px
      border 1px solid #999999
      border-radius 3px
      box-shadow 0 0 7px rgba(102, 102, 102, .65)
      color inherit
      text-decoration none
      display block
      opacity 1
      transition opacity .5s
      margin 10px

      &:hover
        opacity .8
        transition opacity .5s

      .cover
        background-position center
        background-size cover
        width 100%
        height 150px
        display block

      .title,
      .description
        margin 10px

      .title
        font-size 20px

      .description
        font-size 12px

